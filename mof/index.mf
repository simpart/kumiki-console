<setting>
    <tag load="mofron-comp-text">Text</tag>
    <tag load="mofron-comp-image">Image</tag>
    <tag load="mofron-comp-ujarak">Button</tag>
    <tag load="mofron-comp-appbase">AppBase</tag>
    <tag load="mofron-comp-table">Table</tag>
    <!-- event -->
    <tag load="mofron-event-click">Click</tag>
    <!-- effect -->
    <tag load="mofron-effect-border">Border</tag>
    <tag load="mofron-effect-width">efWidth</tag>
    <tag load="mofron-effect-fade">Fade</tag>
    <!-- layout -->
    <tag load="mofron-layout-hrzcenter">HrzCent</tag>
    <tag load="mofron-layout-margin">loMargin</tag>
    <tag load="mofron-layout-grid">Grid</tag>
    <root-conf>
        <theme>
            <Text:config>
                <font>"'M PLUS Rounded 1c'"</font>
                <main-color>[80,80,80]</main-color>
            </Text:config>
        </theme>
    </root-conf>
</setting>

<script run=init>
let close_menu = () => {
    try {
        leftMenu.execEffect(2);
        mainConts.execEffect(2);
	menubar_img.visible(true);
    } catch (e) {
        console.error(e.stack);
	throw e;
    }
}

let open_menu = () => {
    try {
        leftMenu.execEffect(3);
        mainConts.execEffect(3);
	menubar_img.visible(false);
    } catch (e) {
        console.error(e.stack);
        throw e;
    }
}


